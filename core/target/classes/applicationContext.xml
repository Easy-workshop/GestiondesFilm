<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    
<bean id="FilmDao" class="com.elephorm.formation.entity.repository.JdbcFilmDao" scope="prototype">
<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
</bean>


<bean id="FilmService" class="com.elephorm.formation.entity.service.FilmService">
<property name="dao" ref="FilmDao"/>
</bean>


<bean id="FilmService2" class="com.elephorm.formation.entity.service.FilmService">
<property name="dao" ref="FilmDao"/>
</bean>


<bean id="FilmController" class="com.elephorm.formation.entity.controller.DefaultFilmController">
<property name="service" ref="FilmService"/>
</bean>

</beans>